{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile TS",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Upload JS",
            "type": "shell",
            "command": "node update.js",
            "dependsOn": [
                "Compile TS"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}